# Maintainer: ArchAssault <team archassautl org>
pkgname=mrtparse-git
pkgver=r258.4616d1d
pkgrel=1
groups=('archassault')
pkgdesc="a module to read and analyze the MRT format data."
arch=('any')
url='https://github.com/YoshiyukiYamauchi/mrtparse'
license=('APACHE')
provides=('mrtparse')
conflicts=('mrtparse')
replaces=('mrtparse')
depends=('python2')
makedepends=('git')
source=("mrtparse::git+https://github.com/YoshiyukiYamauchi/mrtparse.git")
sha512sums=('SKIP')

build() {
  cd "$srcdir/mrtparse"
  sed -i 's|env python$|env python2|' *.py
	python2 setup.py build
}

pkgver() {
  cd "$srcdir/mrtparse"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "$srcdir/mrtparse"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
