pkgname=wepbuster
pkgver=1.0_beta_0.7
pkgrel=1
pkgdesc="script for automating aircrack-ng"
arch=('any')
url="http://code.google.com/p/wepbuster/"
license=('BSD')
depends=("aircrack-ng" "perl-term-readkey" "perl-expect" 
         "perl-file-slurp" "perl-number-range" "perl-algorithm-permute")
groups=('archassault' 'archassault-wireless')
source=("http://wepbuster.googlecode.com/files/$pkgname-$pkgver.tgz")
sha512sums=('c73dadb9ba009d2c2c3c467418c64c9ddbbf818e31266f11de82386848fbc8594b2a98f3441a9298b2774f1b2ae8ee83a2bb5789c2c6168e405aeb39975e312b')

package() {
  cd "$srcdir/$pkgname-1.0_beta"
  install -Dm755 wepbuster "$pkgdir"/usr/bin/wepbuster
}

